/* pages/integral/get/get.wxss */
page{
  background-color: #fff;
}
.tab-h{
	display: flex;
	flex-wrap: nowrap;
	justify-content: space-around;
	width:100%;
	height: 80rpx;
	background-color: #fff;
	line-height: 80rpx;
	border-bottom: 1px solid #efefef;
	position:  fixed;
	top:0;
	left:0;
  z-index:10;
}
.tab-item{
  font-size: 32rpx;
  color: #464646;
}
.tab-item.active{
	  color: #f43333;
  	border-bottom: 6rpx solid #f43333;
}
.tab-content{
  margin-top:80rpx;
}
.jf-item{
  width: 750rpx;
  height: 120rpx;
  box-sizing: border-box;
  padding:20rpx 25rpx;
  border-bottom: 1px solid #efefef;
  color: #333;
}
.jf-item .top{
  text-align: left;
  width: 100%;
  font-size: 32rpx;
}
.jf-item .bot{
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
}
.jf-item .bot .time{
  font-size: 26rpx;
}
.jf-item .bot .num{
  font-size: 30rpx;
}
.no-item{
  width: 100%;
  text-align: center;
}
.no-item image{
  width:150rpx;
  height:150rpx;
  margin-top:200rpx;
  margin:200rpx auto 0;
}
.no-item view{
  text-align:center;
  color:#666;
}